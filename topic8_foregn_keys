-- Урок 8. Сложные запросы
-- 1. Добавить необходимые внешние ключи для всех таблиц базы данных vk (приложить команды).

USE vk;

-- Без изменений:
-- users
-- friendship_statuses
-- media_types
-- target_types
-- meetings
-- communities


-- profiles - user_id - первичный ключ

ALTER TABLE profiles 
  ADD CONSTRAINT profiles_user_id_fk
    FOREIGN KEY (user_id)
      REFERENCES users(id)
        ON DELETE SET NULL
          ON UPDATE CASCADE;
         

-- friendship - user_id, friend_id - первичные ключи
      
 ALTER TABLE friendship
   ADD CONSTRAINT friendship_user_id_fk
     FOREIGN KEY (user_id)
       REFERENCES users(id)
         ON DELETE CASCADE
           ON UPDATE CASCADE,
    ADD CONSTRAINT friendship_friend_id_fk
      FOREIGN KEY (friend_id)
        REFERENCES users(id)
          ON DELETE CASCADE
            ON UPDATE CASCADE, 
    ADD CONSTRAINT friendship_status_id_fk
      FOREIGN KEY (status_id)
        REFERENCES friendship_statuses(id)
          ON DELETE SET NULL
            ON UPDATE CASCADE; 


-- meetings_users - meetings_id, user_id - первичные ключи

ALTER TABLE meetings_users 
  ADD CONSTRAINT meetings_users_user_id_fk
    FOREIGN KEY (user_id)
      REFERENCES users(id)
        ON DELETE SET NULL
          ON UPDATE CASCADE,    
   ADD CONSTRAINT meetings_users_meeting_id_fk
    FOREIGN KEY (meeting_id)
      REFERENCES meetings(id)
        ON DELETE SET NULL
          ON UPDATE CASCADE;
         

-- communities_users - оба ключа первичные (community_id и user_id)
 
ALTER TABLE communities_users 
  ADD CONSTRAINT communities_users_user_id_fk
    FOREIGN KEY (user_id)
      REFERENCES users(id)
        ON DELETE SET NULL
          ON UPDATE CASCADE,    
   ADD CONSTRAINT communities_users_community_id_fk
    FOREIGN KEY (community_id)
      REFERENCES communities(id)
        ON DELETE SET NULL
          ON UPDATE CASCADE;
         
         
-- posts

ALTER TABLE posts 
  ADD CONSTRAINT posts_user_id_fk
    FOREIGN KEY (user_id)
      REFERENCES users(id)
        ON DELETE CASCADE
          ON UPDATE CASCADE,    
   ADD CONSTRAINT posts_media_id_fk
    FOREIGN KEY (media_id)
      REFERENCES media(id)
        ON DELETE SET NULL
          ON UPDATE CASCADE;
                
-- media

ALTER TABLE media
  ADD CONSTRAINT media_user_id_fk
    FOREIGN KEY (user_id)
      REFERENCES users(id)
        ON DELETE CASCADE
          ON UPDATE CASCADE,
  ADD CONSTRAINT media_media_type_id_fk
    FOREIGN KEY (media_type_id)
      REFERENCES media_types(id)
        ON DELETE CASCADE
          ON UPDATE CASCADE;   
 
         
-- likes
-- likes.target_id без внешнего ключа, так как зависит от 4 таблиц

ALTER TABLE likes
  ADD CONSTRAINT likes_user_id_fk
    FOREIGN KEY (user_id)
      REFERENCES users(id)
        ON DELETE CASCADE
          ON UPDATE CASCADE,
  ADD CONSTRAINT likes_target_type_id_fk
    FOREIGN KEY (target_type_id)
      REFERENCES target_types(id)
        ON DELETE CASCADE
          ON UPDATE CASCADE;  


-- messages

ALTER TABLE messages 
  MODIFY from_user_id INT UNSIGNED,
  MODIFY to_user_id INT UNSIGNED;
         
ALTER TABLE messages 
  ADD CONSTRAINT messages_from_user_id_fk
    FOREIGN KEY (from_user_id)
      REFERENCES users(id)
        ON DELETE SET NULL
          ON UPDATE CASCADE, 
  ADD CONSTRAINT messages_to_user_id_fk
    FOREIGN KEY (to_user_id)
      REFERENCES users(id)
        ON DELETE SET NULL
          ON UPDATE CASCADE;
